---
import Base from "@layouts/Base.astro";
import { parseMarkdown } from "@lib/utils/textConverter";
import { site } from "@lib/strapi";
import type { IEditor } from "@interf/site";
import FooterPost from "@layouts/components/footerPost.astro";

const content = site[0].cookiePolicy;
---

<Base>
  <section class="section pb-0 pt-[10px]">
    <div class="container">
      <div class="max-w-[760px] mx-auto condation-text">
        <div class="mb-16 text-left text-[#000]">
          <div
            class="w-full text-center bg-[#f6f9fc] p-[10px] border-[1px] border-[#EBF1F8] mb-[20px]"
          >
            <h1 class="md:text-[36px] text-[22px] text-[#000]">
              Cookie Policy
            </h1>
          </div>
          <div class="text-[#000]">
            {
              content.map((item: IEditor) => (
                <ul class="list-decimal pl-7">
                  {item.children.map((v, index: number) => (
                    <>
                      <span class={"${v.bold} ${v.italic} mt-1 mb-4 block"}>
                        {v.text}
                      </span>
                      {v?.children && (
                        <li class="mb-5">
                          {v?.children.map((v, index: number) => (
                            <>
                              <span
                                class={
                                  v.bold +
                                  " " +
                                  v.italic +
                                  "whitespace-break-spaces"
                                }
                              >
                                {v.text}
                              </span>
                            </>
                          ))}
                        </li>
                      )}
                    </>
                  ))}
                </ul>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>
  <FooterPost />
</Base>
