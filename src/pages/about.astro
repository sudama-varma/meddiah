---
import Base from "@layouts/Base.astro";
---

<Base>
  <section class="section pt-[10px]">
    <div class="container">
      <div class="w-full ">
        <div class="mb-8 text-left text-[#000] md:flex bg-[#EBF1F8] items-end border-[#dbe4ef] border-[1px]">
          <div class="basis-[65%]">
            <img src="../../public/uploads/about.webp" alt="oops">
          </div>
          <div class="basis-[35%] p-[20px]">
            <h2 class="text-[#000] "><strong>About Us</strong></h2>
          </div>
        </div>
      </div>
      <div class="max-w-[750px] mx-auto">
        <div>
          <p class="text-[#000] first-letter:text-7xl first-letter:text-slate-900 first-letter:mr-2 first-letter:float-left">Welcome to Meddiah! We're your go-to platform for brain teasers, and interactive learning adventures. If you're here to test your skills or just have fun, our mission is to keep you thinking, exploring, and levelling up in every way possible.</p>
        </div>
          <div>
            <p class="text-[#000] my-[20px]">Stay curious,
            The <strong>Meddiah</strong> Team</p>
          </div>
      </div>
    </div>
  </section>
</Base>
